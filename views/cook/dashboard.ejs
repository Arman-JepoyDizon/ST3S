<%- include('../partials/cookHeader') %>

<main class="cook-main-content">
    <div class="card cook-summary-card mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div class="summary-icon-wrapper me-3">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div>
                    <h5 class="card-title mb-0 fw-bold">Active Orders</h5>
                    <p class="card-text text-muted mb-0"><%= orders.length %> pending</p>
                </div>
            </div>
            <a href="/cook/dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-clockwise"></i>
            </a>
        </div>
    </div>

    <% if (orders && orders.length > 0) { %>
        <% orders.forEach(order => { %>
            <div class="card order-card-cook mb-4" data-created-at="<%= order.createdAt.toISOString() %>">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold mb-0">
                            Order #<%= order._id.toString().slice(-4).toUpperCase() %>
                            <small class="text-muted fw-normal ms-2 order-timer">(00:00)</small>
                        </h5>
                        <small class="text-muted"><%= order.customerName ? order.customerName : 'Walk-in Customer' %></small>
                    </div>
                </div>
                <div class="card-body">
                    <% order.items.forEach(item => { %>
                        <div class="card order-item-card-cook mb-2">
                            <div class="card-body d-flex align-items-center">
                                <span class="item-quantity"><%= item.quantity %>x</span>
                                <div>
                                    <p class="item-name mb-0"><%= item.productId ? item.productId.name : 'Product not found' %></p>
                                    <% if (item.sizeLabel) { %>
                                        <small class="text-muted"><%= item.sizeLabel %></small>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <div class="card-footer">
                    <form action="/cook/orders/<%= order._id %>/ready" method="POST">
                        <button type="submit" class="btn btn-success btn-ready w-100 btn-lg">
                            <i class="bi bi-check-circle-fill me-2"></i>Ready for Pickup
                        </button>
                    </form>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="card text-center py-5">
            <div class="card-body">
                <div class="empty-cart-icon mb-3">
                    <i class="bi bi-cup-hot"></i>
                </div>
                <h4 class="text-muted">All caught up!</h4>
                <p class="text-muted">No pending orders in the queue.</p>
            </div>
        </div>
    <% } %>
</main>

<%- include('../partials/cookFooter') %>