<%- include('../partials/adminHeader') %>

<div class="admin-container">
    <%- include('../partials/adminSidebar', { activePage: 'products' }) %>

    <div class="admin-content">
        <%- include('../partials/adminNavbar') %>

        <main class="p-3">
            <div class="page-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0">Add New Product</h2>
                <a href="/admin/products" class="btn btn-outline-secondary">
                    Back to Products
                </a>
            </div>

            <div class="card form-card">
                <div class="card-body">
                    <form action="/admin/products/add" method="POST">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Product Name" required>
                            <label for="name">Product Name</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <select name="category" id="category" class="form-select" required>
                                <option value="" hidden selected>-- Select Category --</option>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat._id %>"><%= cat.name %></option>
                                <% }) %>
                            </select>
                            <label for="category">Category</label>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="mb-0">Pricing & Variants</h5>
                            <button class="btn btn-primary" type="button" id="add-size-btn">
                                <i class="bi bi-plus-lg"></i> Add Variant
                            </button>
                        </div>

                        <div class="col-md-12" id="price-container">
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="price" name="price[]" step="0.01" min="0" placeholder="Price" required>
                                <label for="price">Price</label>
                            </div>
                        </div>

                        <div class="col-md-12" id="size-price-container">
                            </div>
                        
                        <hr>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="Image URL (Optional)">
                            <label for="imageUrl">Image URL (Optional)</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg">Add Product</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>
<script>
    const addSizeBtn = document.getElementById('add-size-btn');
    const priceContainer = document.getElementById('price-container');
    const sizePriceContainer = document.getElementById('size-price-container');

    function createSizePriceRow() {
        const sizePriceGroup = document.createElement('div');
        sizePriceGroup.classList.add('row', 'mb-2', 'align-items-center', 'size-price-row');
        sizePriceGroup.innerHTML = `
            <div class="col-5">
                <div class="form-floating">
                    <input type="text" class="form-control" name="size[]" placeholder="Size" required>
                    <label>Size </label>
                </div>
            </div>
            <div class="col-5">
                <div class="form-floating">
                    <input type="number" class="form-control" name="price[]" step="0.01" min="0" placeholder="Price" required>
                    <label>Price</label>
                </div>
            </div>
            <div class="col-2 text-center">
                <button type="button" class="btn btn-outline-danger btn-remove-size" title="Remove">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        `;

        const removeBtn = sizePriceGroup.querySelector('.btn-remove-size');
        removeBtn.addEventListener('click', () => {
            sizePriceGroup.remove();
            if (!sizePriceContainer.querySelector('.size-price-row')) {
                restoreDefaultPriceInput();
            }
        });
        return sizePriceGroup;
    }

    function restoreDefaultPriceInput() {
        priceContainer.style.display = 'block';
    }

    addSizeBtn.addEventListener('click', () => {
        if (priceContainer.style.display !== 'none') {
            priceContainer.innerHTML = ''; 
            priceContainer.style.display = 'none';
        }
        const newRow = createSizePriceRow();
        sizePriceContainer.appendChild(newRow);
    });
</script>

<%- include('../partials/adminBottomNav', { activePage: 'products' }) %>
<%- include('../partials/adminFooter') %>