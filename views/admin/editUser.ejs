<%- include('../partials/adminHeader') %>

<div class="admin-container">
    <%- include('../partials/adminSidebar', { activePage: 'users' }) %>

    <div class="admin-content">
        <%- include('../partials/adminNavbar') %>

        <main class="p-3">
            <div class="page-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3">Edit User</h2>
                <a href="/admin/users" class="btn btn-outline-secondary">
                    Cancel
                </a>
            </div>

            <div class="card form-card">
                <div class="card-body">
                    <form action="/admin/users/edit/<%= user_details._id %>" method="POST">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username" value="<%= user_details.username %>" required>
                            <label for="name">Username</label>
                        </div>

                        <div class="form-floating mb-3">
                            <select class="form-select" id="role" name="role" aria-label="User Role">
                                <option value="Front Liner" <%=user_details.role == 'Front Liner'? 'selected': '' %>>Frontliner</option>
                                <option value="Admin" <%=user_details.role == 'Cook'? 'selected': '' %>>Cook</option>
                                <option value="Admin" <%=user_details.role == 'Admin'? 'selected': '' %>>Admin</option>
                            </select>
                            <label for="role">Role</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg">Save Changes</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>

<%- include('../partials/adminBottomNav', { activePage: 'users' }) %>
<%- include('../partials/adminFooter') %>