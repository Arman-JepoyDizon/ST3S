<%- include('../partials/adminHeader') %>

<div class="admin-container">
    <%- include('../partials/adminSidebar', { activePage: 'users' }) %>

    <div class="admin-content">
        <%- include('../partials/adminNavbar') %>

        <main class="p-3">
            <div class="page-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3">Users</h2>
                <a href="/admin/users/add" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Add User
                </a>
            </div>

            <div class="user-list">
                <% if (users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <div class="card user-card mb-3">
                            <div class="card-body d-flex align-items-center">
                                <i class="bi bi-person-circle user-avatar me-3"></i>
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-0"><%= user.username %></h5>
                                    <p class="card-text text-muted mb-0"><%= user.role %></p>
                                </div>
                                <div class="user-card-actions d-flex gap-2">
                                    <a href="/admin/users/edit/<%= user._id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <form action="/admin/users/delete/<%= user._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="card text-center py-5">
                        <p class="text-muted">No users found. Click "Add User" to get started.</p>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</div>

<%- include('../partials/adminBottomNav', { activePage: 'users' }) %>
<%- include('../partials/adminFooter') %>