<%- include('../partials/adminHeader') %>

<div class="admin-container">
    <%- include('../partials/adminSidebar', { activePage: 'users' }) %>

    <div class="admin-content">
        <%- include('../partials/adminNavbar') %>

        <main class="p-3">
            <div class="page-header mb-3">
                <h2 class="h3 mb-0">Users</h2>
                <% if (users && users.length > 0) { %>
                    <p class="text-muted"><%= users.length %> team members</p>
                <% } %>
            </div>

            <a href="/admin/users/add" class="btn btn-primary btn-lg w-100 mb-3 fw-bold">
                <i class="bi bi-plus-lg me-1"></i>Invite User
            </a>
            <div class="form-floating mb-4">
                <input type="search" class="form-control" id="searchUsers" placeholder="Search users...">
                <label for="searchUsers"><i class="bi bi-search me-2"></i>Search users...</label>
            </div>

            <div class="user-list">
                <% if (users && users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <a href="/admin/users/edit/<%= user._id %>" class="user-card-link">
                            <div class="card user-card-revamp mb-3">
                                <div class="card-body d-flex align-items-center">
                                    <div class="user-avatar-initial me-3">
                                        <span><%= user.username.charAt(0).toUpperCase() %></span>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="card-title mb-0"><%= user.username %></h5>
                                        <small class="text-muted"><%= user.username %>@miras.st3s</small>
                                    </div>
                                    <div class="text-end">
                                        <% if (user.role === 'Admin') { %>
                                            <span class="badge badge-admin">Admin</span>
                                        <% } else if (user.role === 'Front Liner') { %>
                                            <span class="badge badge-frontliner">Front Liner</span>
                                        <% } else { %>
                                             <span class="badge badge-cook">Cook</span>
                                        <% } %>
                                        <div class="text-muted small mt-1">
                                            <i class="bi bi-calendar-event"></i>
                                            <%= user.createdAt.toLocaleDateString() %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    <% }) %>
                <% } else { %>
                    <div class="card text-center py-5">
                        <div class="card-body">
                           <p class="text-muted">No users found. Click "Invite User" to get started.</p>
                       </div>
                   </div>
                <% } %>
            </div>
        </main>
    </div>
</div>

<%- include('../partials/adminBottomNav', { activePage: 'users' }) %>
<%- include('../partials/adminFooter') %>