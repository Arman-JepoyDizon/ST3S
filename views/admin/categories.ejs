<%- include('../partials/adminHeader') %>

<div class="admin-container">
    <%- include('../partials/adminSidebar', { activePage: 'categories' }) %>

    <div class="admin-content">
        <%- include('../partials/adminNavbar') %>

        <main class="p-3">
            <div class="page-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3">Categories</h2>
                <a href="/admin/categories/add" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Add New
                </a>
            </div>

            <div class="product-list">
                <% if (categories.length > 0) { %>
                    <% categories.forEach(category => { %>
                        <div class="card product-card mb-3">
                            <div class="row g-0">
                                <div class="col-9 col-md-10">
                                    <div class="card-body d-flex flex-column h-100">
                                        <div class="flex-grow-1">
                                            <h5 class="card-title mb-1"><%= category.name %></h5>
                                        </div>
                                        <div class="product-card-actions align-self-end d-flex gap-2">
                                            <a href="/admin/categories/edit/<%= category._id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <form action="/admin/categories/delete/<%= category._id %>" method="POST" onsubmit="return confirm('Are you sure?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="card text-center py-5">
                        <p class="text-muted">No Categories found. Click "Add New" to get started.</p>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</div>

<%- include('../partials/adminBottomNav', { activePage: 'categories' }) %>
<%- include('../partials/adminFooter') %>