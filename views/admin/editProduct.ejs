<%- include('../partials/adminHeader') %>

<div class="admin-container">
    <%- include('../partials/adminSidebar', { activePage: 'products' }) %>

    <div class="admin-content">
        <%- include('../partials/adminNavbar') %>

        <main class="p-3">
            <div class="page-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3">Edit Product</h2>
                <a href="/admin/products" class="btn btn-outline-secondary">
                    Cancel
                </a>
            </div>

            <div class="card form-card">
                <div class="card-body">
                    <form action="/admin/products/update/<%= product._id %>" method="POST">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Product Name" value="<%= product.name %>" required>
                            <label for="name">Product Name</label>
                        </div>
                        
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <select name="category" id="category" class = "form-select" required>
                                    <%categories.forEach(cat=>{%>
                                        <option value="<%= cat._id %>" <%= String(cat._id) === String(product.category) ? 'selected' : '' %>><%= cat.name %></option>
                                    <%})%>
                                </select>
                                <label for="category">Category</label>
                            </div>
                        </div>
                  
                        <div class="col-md-12" id = "price-container">
                            <%if(sizes && sizes.length <= 0){ %>
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="price" name="price[]" step="0.01" min="0" placeholder="Price" value="<%= product.price %>" required>
                                    <label for="price">Price</label>
                                </div>
                            <%}%>
                        </div>

                        <button class = "col-12 mb-3 btn btn-lg btn-primary" type = "button" id="add-size-btn">Add Size (optional)</button>
                        <div id="size-price-container">
                        <% if (sizes.length > 0) { %>
                            <% sizes.forEach((size, index) => { %>
                                <div class="row mb-3 align-items-center justify-content-center size-price-row">
                                <div class="col-md-5">
                                    <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="size-<%= index %>" name="size[]" placeholder="Size Label" value="<%= size.label %>" required>
                                    <label for="size-<%= index %>">Size Label</label>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="price-<%= index %>" name="price[]" step="0.01" min="0" placeholder="Price" value="<%= prices[index] ? prices[index].price : '' %>" required>
                                    <label for="price-<%= index %>">Price</label>
                                    </div>
                                </div>
                                <div class="col-md-2 text-center">
                                    <button type="button" class="btn btn-outline-danger btn-remove-size" title="Remove">
                                    <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                </div>
                            <% }) %>
                        <% } %>

                        </div>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="Image URL (Optional)" value="<%= product.imageUrl || '' %>">
                            <label for="imageUrl">Image URL (Optional)</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg">Save Changes</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>
<script>
  const addSizeBtn = document.getElementById('add-size-btn');
  const priceContainer = document.getElementById('price-container');
  const sizePriceContainer = document.getElementById('size-price-container');
  const form = document.querySelector('form');

  // ðŸ”¹ Attach delete behavior to a button
  function attachRemoveEvent(button) {
    button.addEventListener('click', () => {
        const row = button.closest('.row');
        if (!row) return;

        // Handle deleted sizes (from DB)
        const hiddenInput = row.querySelector('input[name="sizeId"]');
        if (hiddenInput) {
        const deletedInput = document.createElement('input');
        deletedInput.type = 'hidden';
        deletedInput.name = 'deletedSizes[]';
        deletedInput.value = hiddenInput.value;
        form.appendChild(deletedInput);
        }

        // Remove row visually
        row.remove();

        // âœ… Corrected condition
        if (sizePriceContainer.querySelectorAll('.size-price-row').length === 0) {
        restoreSinglePriceInput();
        }
    });
    }
  // ðŸ”¹ Attach to all existing delete buttons
  document.querySelectorAll('.btn-remove-size').forEach(btn => attachRemoveEvent(btn));

  // ðŸ”¹ Function to restore the single price field
  function restoreSinglePriceInput() {
    if (!priceContainer) return;
    priceContainer.style.display = 'block';
    priceContainer.innerHTML = `
      <div class="form-floating mb-3">
        <input type="number" class="form-control" id="price" name="price[]" step="0.01" min="0" placeholder="Price" required>
        <label for="price">Price</label>
      </div>
    `;
  }

  // ðŸ”¹ Add new size rows dynamically
  addSizeBtn.addEventListener('click', () => {
    // Hide single price input when switching to multi-size mode
    if (priceContainer) {
      priceContainer.innerHTML = '';
      priceContainer.style.display = 'none';
    }

    const sizePriceGroup = document.createElement('div');
    sizePriceGroup.classList.add('row', 'mb-3', 'align-items-center', 'justify-content-center', 'size-price-row');

    sizePriceGroup.innerHTML = `
      <div class="col-md-5">
        <div class="form-floating mb-3">
          <input type="text" class="form-control" name="size[]" placeholder="Size" required>
          <label>Size</label>
        </div>
      </div>

      <div class="col-md-5">
        <div class="form-floating mb-3">
          <input type="number" class="form-control" name="price[]" step="0.01" min="0" placeholder="Price" required>
          <label>Price</label>
        </div>
      </div>

      <div class="col-md-2 text-center">
        <button type="button" class="btn btn-outline-danger btn-remove-size" title="Remove">
          <i class="bi bi-trash"></i>
        </button>
      </div>
    `;

    sizePriceContainer.appendChild(sizePriceGroup);

    // Attach delete behavior to the new button
    const removeBtn = sizePriceGroup.querySelector('.btn-remove-size');
    attachRemoveEvent(removeBtn);
  });
</script>


<%- include('../partials/adminBottomNav', { activePage: 'products' }) %>
<%- include('../partials/adminFooter') %>