<%- include('../partials/adminHeader') %>

<div class="admin-container">
    <%- include('../partials/adminSidebar', { activePage: 'products' }) %>

    <div class="admin-content">
        <%- include('../partials/adminNavbar') %>

        <main class="p-3">
            <div class="page-header mb-3">
                <h2 class="h3 mb-0">Products</h2>
                <% if (products && products.length > 0) { %>
                    <p class="text-muted"><%= products.length %> products</p>
                <% } %>
            </div>

            <a href="/admin/products/add" class="btn btn-primary btn-lg w-100 mb-3 fw-bold">
                <i class="bi bi-plus-lg me-1"></i>Add Product
            </a>
            <div class="form-floating mb-4">
                <input type="search" class="form-control" id="searchProducts" placeholder="Search products...">
                <label for="searchProducts"><i class="bi bi-search me-2"></i>Search products...</label>
            </div>

            <div class="product-list">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="card product-card-revamp mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <img src="<%= product.imageUrl || 'https://via.placeholder.com/150' %>" class="product-card-img-revamp me-3" alt="<%= product.name %>">
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between">
                                            <h5 class="card-title mb-1"><%= product.name %></h5>
                                            <span class="badge bg-success-light text-success-dark">Active</span>
                                        </div>
                                        <p class="card-text text-muted small mb-1"><%= product.category ? product.category.name : 'Uncategorized' %></p>
                                        <p class="card-text fw-bold text-primary">â‚±<%= product.price.toFixed(2) %></p>
                                    </div>
                                </div>
                                <hr class="my-2">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <form action="/admin/products/delete/<%= product._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="card text-center py-5">
                         <div class="card-body">
                            <p class="text-muted">No products found. Click "Add Product" to get started.</p>
                        </div>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</div>

<%- include('../partials/adminBottomNav', { activePage: 'products' }) %>
<%- include('../partials/adminFooter') %>