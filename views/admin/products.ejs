<%- include('../partials/adminHeader') %>

<div class="admin-container">
    <%- include('../partials/adminSidebar', { activePage: 'products' }) %>

    <div class="admin-content">
        <%- include('../partials/adminNavbar') %>

        <main class="p-3">
            <div class="page-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3">Products</h2>
                <a href="/admin/products/add" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Add New
                </a>
            </div>

            <div class="product-list">
                <% if (products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="card product-card mb-3">
                            <div class="row g-0">
                                <div class="col-3 col-md-2">
                                    <img src="<%= product.imageUrl || 'https://via.placeholder.com/150' %>" class="img-fluid product-card-img" alt="<%= product.name %>">
                                </div>
                                <div class="col-9 col-md-10">
                                    <div class="card-body d-flex flex-column h-100">
                                        <div class="flex-grow-1">
                                            <h5 class="card-title mb-1"><%= product.name %></h5>
                                            <p class="card-text text-muted small"><%= product.category %></p>
                                            <p class="card-text fw-bold">â‚±<%= product.price.toFixed(2) %></p>
                                        </div>
                                        <div class="product-card-actions align-self-end d-flex gap-2">
                                            <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <form action="/admin/products/delete/<%= product._id %>" method="POST" onsubmit="return confirm('Are you sure?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="card text-center py-5">
                        <p class="text-muted">No products found. Click "Add New" to get started.</p>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</div>

<%- include('../partials/adminBottomNav', { activePage: 'products' }) %>
<%- include('../partials/adminFooter') %>