<%- include('../partials/frontlineHeader') %>

<main class="container-fluid frontline-main-content">
    <div class="category-filters mb-4">
        <a class="btn btn-category <%= categoryFilter ? '' : 'active' %>" href="/">All</a>
        <% categories.forEach(category => { %>
            <a class="btn btn-category <%= categoryFilter === category.name ? 'active' : '' %>" href="?category=<%= encodeURIComponent(category.name) %>">
                <%= category.name %>
            </a>
        <% }) %>
    </div>


    <div class="row g-3">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col-6 d-flex">
                    <div class="card product-card-frontline">
                        <div class="product-image-wrapper">
                            <img src="<%= product.imageUrl || 'https://via.placeholder.com/300' %>" class="card-img-top" alt="<%= product.name %>">
                            <div class="btn-add-to-cart">+</div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/product/<%= product._id %>" class="stretched-link">
                                    <%= product.name %>
                                </a>
                            </h5>
                            <p class="card-text text-muted small"><%= product.category %></p>
                            <p class="card-text fw-bold">₱<%= product.price.toFixed(2) %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <p class="text-center text-muted">No products are available at the moment.</p>
            </div>
        <% } %>
    </div>
</main>

<div class="current-order-bar" id="current-order-bar" style="display: none;">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <p class="mb-0 fw-bold" id="order-bar-items">0 items</p>
        </div>
        <div class="d-flex align-items-center">
            <p class="mb-0 fw-bold me-3" id="order-bar-total">₱0.00</p>
            <a href="/cart" class="btn btn-light btn-sm">View Cart <i class="bi bi-arrow-right"></i></a>
        </div>
    </div>
</div>

<%- include('../partials/frontlineBottomNav') %>
<%- include('../partials/frontlineFooter') %>