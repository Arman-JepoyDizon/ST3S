<%- include('../partials/frontlineHeader') %>

<main class="container-fluid frontline-main-content">
    <div class="category-filters mb-4">
        <a class="btn btn-category <%= !categoryFilter ? 'active' : '' %>" href="/">All</a>
        <% if (categories && categories.length > 0) { %>
            <% categories.forEach(category => { %>
                <a class="btn btn-category <%= categoryFilter === encodeURIComponent(category.name) ? 'active' : '' %>" href="?category=<%= encodeURIComponent(category.name) %>">
                    <%= category.name %>
                </a>
            <% }) %>
        <% } %>
    </div>


    <div class="row g-3">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col-6 d-flex">
                    <div class="card product-card-frontline">
                        <div class="product-image-wrapper">
                            <img src="<%= product.imageUrl || 'https://via.placeholder.com/300' %>" class="card-img-top" alt="<%= product.name %>">
                            <div class="btn-add-to-cart">+</div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/product/<%= product._id %>" class="stretched-link">
                                    <%= product.name %>
                                </a>
                            </h5>
                            <p class="badge badge-category"><%= product.category.name %></p>
                            <p class="card-text fw-bold">₱<%= product.price.toFixed(2) %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12 text-center mt-5">
                <p class="text-muted">No products found for this category.</p>
            </div>
        <% } %>
    </div>
</main>

<a href="/cart" class="current-order-bar card" id="current-order-bar">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <p class="mb-0 fw-bold">Current Order</p>
                <small class="text-muted" id="order-bar-items">0 items</small>
            </div>
            <div class="text-end">
                <small class="text-muted">Total</small>
                <p class="mb-0 fw-bold text-primary fs-5" id="order-bar-total">₱0.00</p>
            </div>
        </div>
    </div>
</a>


<%- include('../partials/frontlineBottomNav') %>
<%- include('../partials/frontlineFooter') %>